<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Les Chiffres</title>
    @* FAV ICONS *@
    <link rel="apple-touch-icon" sizes="180x180" href="assets/ressources/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/ressources/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/ressources/favicon-16x16.png">
    @* CSS IMPORTS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChiffresApi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="manifest" href="~/ressources/site.webmanifest">
    <link rel="stylesheet" href="~/css/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ChiffresApi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ChiffresApi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* SCRIPTS *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/angular/angular.min.js"></script>
    <script src="~/js/angular-route/angular-route.min.js"></script>
    <script src="~/js/app.js"></script>
    <!-- SERVICES -->
    <script src="~/js/services/timer-services.js"></script>
    <script src="~/js/services/validation-service.js"></script>
    <script src="~/js/services/game-service.js"></script>
    <!-- CONTROLLERS -->
    <script src="~/js/controllers/formulaireController.js"></script>
    <script src="~/js/controllers/gameController.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
